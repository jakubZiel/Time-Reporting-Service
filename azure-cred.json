{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "dbserver_ntr2021zdbserver_name": {
      "type": "string"
    },
    "dbserver_ntr2021zdbserver_adminlogin": {
      "type": "string"
    },
    "dbserver_ntr2021zdbserver_adminpassword": {
      "type": "securestring"
    },
    "dbserver_ntr2021zdbserver_location": {
      "type": "string"
    },
    "dbserver_ntr2021zdbserver_ntr2021z_db_name": {
      "type": "string"
    },
    "dbserver_ntr2021zdbserver_ntr2021z_db_location": {
      "type": "string"
    }
  },
  "resources": [
    {
      "location": "[parameters('dbserver_ntr2021zdbserver_location')]",
      "name": "[parameters('dbserver_ntr2021zdbserver_name')]",
      "type": "Microsoft.Sql/servers",
      "apiVersion": "2019-06-01-preview",
      "properties": {
        "administratorLogin": "[parameters('dbserver_ntr2021zdbserver_adminlogin')]",
        "administratorLoginPassword": "[parameters('dbserver_ntr2021zdbserver_adminpassword')]",
        "version": "12.0"
      },
      "resources": [
        {
          "location": "[parameters('dbserver_ntr2021zdbserver_location')]",
          "name": "AllowAllAzureIPs",
          "type": "firewallrules",
          "apiVersion": "2019-06-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('dbserver_ntr2021zdbserver_name'))]"
          ],
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          }
        },
        {
          "location": "[parameters('dbserver_ntr2021zdbserver_ntr2021z_db_location')]",
          "name": "[parameters('dbserver_ntr2021zdbserver_ntr2021z_db_name')]",
          "type": "databases",
          "apiVersion": "2019-06-01-preview",
          "dependsOn": [
            "[concat('Microsoft.Sql/servers/', parameters('dbserver_ntr2021zdbserver_name'))]"
          ],
          "sku": {
            "name": "Free",
            "tier": "Free"
          },
          "properties": {
            "collation": "SQL_Latin1_General_CP1_CI_AS",
            "maxSizeBytes": "33554432"
          }
        }
      ]
    }
  ]
}