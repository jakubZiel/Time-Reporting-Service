@model project.Models.EntityFramework.Project;

@{
    ViewData["Title"] = "Inspect Project";
    string concurrency = (string)ViewData["concurrency"];
    bool editable = (bool)@ViewData["editable"];
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>
@if (concurrency is not null)
{
    <p style="color:red">@concurrency</p>
}
@if (Model is not null)
{
<form asp-action="Edit" method="post">
    <input asp-for="OwnerID" hidden />
    <input asp-for="ID" hidden />
    @Html.HiddenFor(p => p.Timestamp)

    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@ViewData["Title"]</h2>
        </div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input id="input1" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Active"></label>
                    </div>
                    <div class="col-8">
                        <input id="input2" asp-for="Active" class="form-control" />
                        <span asp-validation-for="Active" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <input id="input3" asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="TimeBudget"></label>
                    </div>
                    <div class="col-8">
                        <input id="input4" asp-for="TimeBudget" class="form-control" />
                        <span asp-validation-for="TimeBudget" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Tags"></label>
                    </div>

                    <div class="col-8">
                        <select id="subAct-field" class="custom-select"
                                asp-items="@(new SelectList(Model.Tags.Select(tag => tag.Name)))">
                        </select>
                        @if (editable)
                        {
                            <input id="input5" name="sub" style="display: inline-block" placeholder="new tag" class="form-control">
                        }
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input id="input6" type="submit" class="btn btn-info w-100" value="Edit" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>
</form>
}
@if (concurrency is not null)
{
<div class="col">
    <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
</div>
}



<script>
    if ("@editable" === "False"){
        for (let i = 1; i < 7; i++){
            let element = document.getElementById(`input${i}`)
            if (element != null){
                element.disabled = true
            }
        }
    }
</script>