@model project.Models.Project;

@{
    ViewData["Title"] = "Inspect Project";

    bool editable = (bool) @ViewData["editable"];
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>


<form asp-action="Edit" method="post">
        <input asp-for="ownerId" hidden/>
        <input asp-for="id" hidden/>
        <div class="border p-3">
            <div class="form-group row">
                <h2 class="text-info pl-3">@ViewData["Title"]</h2>
            </div>
            <div class="row">
                <div class="col-8">
                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="name"></label>
                        </div>
                        <div class="col-8">
                            <input id="input1" asp-for="name" class="form-control"/>
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                    </div>
        
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="active"></label>
                        </div>
                        <div class="col-8">
                            <input id="input2" asp-for="active" class="form-control" />
                            <span asp-validation-for="active" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="description"></label>
                        </div>
                        <div class="col-8">
                            <input id="input3" asp-for="description" class="form-control" />
                            <span asp-validation-for="description" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="timeBudget"></label>
                        </div>
                        <div class="col-8">
                            <input id="input4" asp-for="timeBudget" class="form-control" />
                            <span asp-validation-for="timeBudget" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-4">
                            <label asp-for="subActivities"></label>
                        </div>

                        <div class="col-8">
                            <select id="subAct-field" class="custom-select"
                                    asp-items="@(new SelectList(Model.subActivities))">
                            </select>
                            @if (editable)
                            {
                                <input id="input5" name="sub" style="display: inline-block" placeholder="new subactivity" class="form-control">
                            }
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input id="input6" type="submit" class="btn btn-info w-100" value="Edit"/>
                            </div>
                            <div class="col">
                                 <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                </div>
            </div>
        </div>
</form>

<script>
    if ("@editable" === "False"){
        for (let i = 1; i < 7; i++){
            let element = document.getElementById(`input${i}`)
            if (element != null){
                element.disabled = true    
            }
        }
    }
</script>