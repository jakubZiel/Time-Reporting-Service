@model project.Models.Activity;

@{
    ViewData["Title"] = "Edit Activity";
    Project project = (Project) ViewData["project"];
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
</div>


<form asp-action="Edit" method="post">
        <input asp-for="id" hidden/>
        <input asp-for="active" hidden/>
        <input asp-for="projectId" hidden/>
        <input asp-for="dateCreated" hidden/>
        
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">@ViewData["Title"]</h2>
        </div>
        <div class="row">
            <div class="col-8">
                
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="name" class="form-control" />
                        <span asp-validation-for="name" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="durationMinutes"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="durationMinutes" class="form-control" />
                        <span asp-validation-for="durationMinutes" min="0" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="description"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="description" class="form-control" />
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label>subActivities</label>
                    </div>
                    
                    <div class="col-8">
                        <select id="subAct-field"
                                asp-for="subActivity"
                                asp-items="@(new SelectList(project.subActivities))">
                            <option></option>
                        </select>
                    </div>
                </div>
                
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Edit"/>
                        </div>
                        <div class="col">
                             <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="col-4">
            </div>
        </div>
    </div>   
</form> 